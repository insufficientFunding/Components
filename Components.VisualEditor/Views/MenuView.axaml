<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Components.VisualEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1240" d:DesignHeight="720"
             x:Class="Components.VisualEditor.Views.MenuView"
             x:DataType="viewModels:EditorViewModel">

	<Design.DataContext>
		<viewModels:EditorViewModel />
	</Design.DataContext>

	<DockPanel VerticalAlignment="Top"
	           Background="{DynamicResource MaterialCardBackgroundColor}">

		<Menu DockPanel.Dock="Left">
			<!-- File Tab -->
			<MenuItem Header="File">
				<MenuItem Header="New" />

				<MenuItem Header="Open..." />

				<MenuItem Header="Save..." />
			</MenuItem>

			<MenuItem Header="View">
				<!-- Hierarchy Tab -->
				<MenuItem Header="Hierarchy">
					<MenuItem Header="Is Visible">
						<MenuItem.Icon>
							<CheckBox />
						</MenuItem.Icon>
					</MenuItem>
				</MenuItem>

				<!-- Inspector Tab -->
				<MenuItem Header="Inspector">
					<MenuItem Header="Is Visible">
						<MenuItem.Icon>
							<CheckBox />
						</MenuItem.Icon>
					</MenuItem>
				</MenuItem>
			</MenuItem>
		</Menu>

	</DockPanel>
</UserControl>